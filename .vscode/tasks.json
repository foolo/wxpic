{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "meson",
			"mode": "build",
			"problemMatcher": [
				"$meson-gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"label": "Meson: Build all targets",
			"dependsOn":"ninja build"
		},
		{
            "label": "ninja build",
            "type": "shell",
            "command": "ninja",
			"args": ["-j1", "-v"],
			"options": {"cwd": "builddir"},
			"group": {
				"kind": "build",
			},
            "presentation": {
                "reveal" : "always",
            }
        }
	]
}